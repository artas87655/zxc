    <footer>
        <p>Визуализация данных с использованием Chart.js | Данные: гидрологические измерения</p>
    </footer>

    <script>
        // Данные за апрель 2023
        const days = Array.from({length: 30}, (_, i) => i + 1); // 1, 2, 3, ..., 30
        
        const waterLevels = [
            264, 274, 260, 257, 278, 296, 302, 293, 289, 264, 
            226, 184, 155, 139, 129, 125, 113, 95, 80, 63, 
            55, 57, 57, 75, 84, 86, 80, 75, 72, 89
        ];
        
        // Находим максимальное и минимальное значение для аннотаций
        const maxLevel = Math.max(...waterLevels);
        const minLevel = Math.min(...waterLevels);
        const maxDay = days[waterLevels.indexOf(maxLevel)];
        const minDay = days[waterLevels.indexOf(minLevel)];
        
        // Настройка графика
        const ctx = document.getElementById('waterChart').getContext('2d');
        const waterChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: days,
                datasets: [{
                    label: 'Уровень воды (см)',
                    data: waterLevels,
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    borderColor: 'rgba(52, 152, 219, 1)',
                    borderWidth: 3,
                    pointBackgroundColor: function(context) {
                        const index = context.dataIndex;
                        const value = context.dataset.data[index];
                        if (value === maxLevel) return 'rgba(231, 76, 60, 1)'; // Красный для максимума
                        if (value === minLevel) return 'rgba(46, 204, 113, 1)'; // Зеленый для минимума
                        return 'rgba(52, 152, 219, 1)'; // Синий для остальных
                    },
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: function(context) {
                        const index = context.dataIndex;
                        const value = context.dataset.data[index];
                        if (value === maxLevel || value === minLevel) return 8;
                        return 5;
                    },
                    pointHoverRadius: 10,
                    fill: true,
                    tension: 0.3, // Сглаживание линии
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index',
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `Уровень: ${context.parsed.y} см`;
                            },
                            title: function(context) {
                                return `${context[0].label} апреля`;
                            }
                        }
                    },
                    legend: {
                        labels: {
                            font: {
                                size: 14
                            },
                            padding: 20
                        }
                    },
                    annotation: {
                        annotations: {
                            maxPoint: {
                                type: 'label',
                                xValue: maxDay,
                                yValue: maxLevel,
                                content: [`Максимум: ${maxLevel} см`, `${maxDay} апреля`],
                                backgroundColor: 'rgba(231, 76, 60, 0.8)',
                                color: 'white',
                                font: {
                                    size: 12,
                                    weight: 'bold'
                                },
                                padding: 10,
                                borderRadius: 6,
                                textAlign: 'center'
                            },
                            minPoint: {
                                type: 'label',
                                xValue: minDay,
                                yValue: minLevel,
                                content: [`Минимум: ${minLevel} см`, `${minDay} апреля`],
                                backgroundColor: 'rgba(46, 204, 113, 0.8)',
                                color: 'white',
                                font: {
                                    size: 12,
                                    weight: 'bold'
                                },
                                padding: 10,
                                borderRadius: 6,
                                textAlign: 'center'
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'День апреля',
                            font: {
                                size: 15,
                                weight: 'bold'
                            },
                            padding: {top: 10, bottom: 10}
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Уровень воды (см)',
                            font: {
                                size: 15,
                                weight: 'bold'
                            },
                            padding: {top: 10, bottom: 10}
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        },
                        suggestedMin: 40,
                        suggestedMax: 320
                    }
                }
            }
        });
        
        // Функция для обновления статистики при наведении на график
        waterChart.canvas.addEventListener('mousemove', function(event) {
            const points = waterChart.getElementsAtEventForMode(event, 'nearest', {intersect: false}, true);
            
            if (points.length > 0) {
                const firstPoint = points[0];
                const day = firstPoint.index + 1;
                const level = waterLevels[firstPoint.index];
                
                // Можно добавить динамическое обновление статистики при наведении
                // document.getElementById('currentDay').textContent = day;
                // document.getElementById('currentLevel').textContent = level + ' см';
            }
        });
    </script>
</body>
